/* pages/order/order.wxss */
.wrap{
    width: 100vw;
    min-height: 100vh;
    background: #f0f0f0;
}
.btnList{
    display: flex;
    align-items: center;
    height: 80rpx;
    background: #fff;
    border-bottom: 1px solid #ccc;
}
.btnList .btn{
    width: 33.3%;
    text-align: center;
    font-size: 26rpx;
}
.btnList .btn.active{
    color: orangered;
}
.conList .conItem{
    box-sizing: border-box;
    background: #fff;
    /* margin-top: 20rpx; */
    padding: 30rpx;
}
.conItem .top{
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.conItem .top .title-right{
    color: orangered;
}
.conItem .middle{
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.conItem .middle .middle-left image{
    width: 170rpx;
    height: 170rpx;
    display: block;
}
.conItem .middle .middle-text{
    font-size: 26rpx;
    width: 50vw;
    height: 72rpx;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
}
.conItem .middle .middle-right .counts{
    text-align: right;
    color: #999;
    font-size: 26rpx;
}
.conItem .bottom{
    margin-top: 30rpx;
    text-align: right;
    line-height: 50rpx;
    font-size: 26rpx;
}

.conItem .bg{
    background: -webkit-linear-gradient(30deg,blue 10px,skyblue 200px,blue 300px);
    border-radius: 10rpx;
    color: #fff;
    width: 100%;
    height: 200rpx;
    padding: 24rpx;
    box-sizing: border-box;
    display: flex;
    margin-bottom: 30rpx;
}
.bg-left{
    width: 66%;
    border-right: 1px dashed #fff;
}
.bg-right{
    width: 34%;
    text-align: center;
}
.bg .bl-name{
    margin-bottom: 16rpx;
}
.br-btn{
    width: 140rpx;
    padding: 0 10rpx;
    height: 50rpx;
    font-size: 24rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    background: #fff;
    color: blue;
    margin: 16rpx auto;
}