/* pages/my/my.wxss */
.wrap{
    width: 100vw;
    min-height: 100vh;
    background: #f0f0f0;
    border-top: 1px solid #ccc;
}
.avatar{
    box-sizing: border-box;
    background: #fff;
    padding: 30rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar .avatar-img{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}
.avatar .avatar-name{
    margin-top: 10rpx;
    color: #666666;
}
.content{
    /* padding: 0 30rpx; */
}
.order-list{
    display: flex;
    padding: 30rpx 0 50rpx 0;
    background: #fff;
}
.order-list .order-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 25%;
    font-size: 24rpx;
    color: #666;
}
.order-list .order-item i{
    font-size: 60rpx;
    margin-bottom: 10rpx;
}
.item {
    padding: 0 30rpx;
    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    font-size: 28rpx;
}
.reservation{
    margin: 5rpx 0 20rpx 0;
}
.address{
    margin-bottom: 20rpx;
}
.bt{
    border-bottom: 1px solid #ccc;
}
.left i{
    margin-right: 16rpx;
}
.left icon{
    margin-right: 16rpx;
}
.iconfont.icon-fanhui{
    font-size: 26rpx;
    display: inline-block;
    transform: rotate(180deg);
    margin-left: 10rpx;
}
.iconfont{
    color: #999;
    font-size: 34rpx;
}
.order .left i{
    color: orange;
}
.reservation .left i{
    color: red;
}
.coupon .left i{
    color: orangered;
}
.Bargain .left i{
    color: red;
}
.fightGroup .left i{
    color: green;
}
.address .left i{
    color: orange;
}
.giveAuthor .left i{
    color: green;
}