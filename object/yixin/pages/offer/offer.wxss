.topImg{
    width:100%;
    height:300rpx;
}
.offer{
    display: flex;
    justify-content: flex-start;
    margin:40rpx 80rpx;
}
.offer image{
    width:400rpx;
    height:200rpx;
}
.offer>view{
    background: #468bff;
    height:200rpx;
    width:200rpx;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
    color:#fff;
    font-size:26rpx;
}
.price{
    font-size:42rpx;
}
.name{
    margin:5rpx 0 20rpx 0;
}
.btn{
    height:50rpx;
    line-height:50rpx;
    text-align: center;
    color:skyblue;
    background: #fff;
    border-radius: 50rpx;
    padding:0 15rpx;
    font-size:20rpx;
}