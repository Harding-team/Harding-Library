@import '/pages/public/css/icon.wxss';
.icon-fanhui{
  display: inline-block;  
  transform: rotate(180deg);
}
.index{
  width:100%;
}
/* 轮播图 */
.swiper{
  height:432rpx;
  width:100%;
}
.swiper image {
  width:100%;
  height:100%;
}
/* 轮播图下方 */
.reservationBox{
  height:230rpx;
  width:100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left:27rpx;
}
.reservationBox>view{
  display: flex;
  flex-flow: column;
  text-align: center;
  margin-right: 54rpx;
  font-size:24rpx;
}
.reservationBox>view image{
  width:108rpx;
  height:108rpx;
}
/* 优惠券 */
.reservation{
  padding:27rpx 0;
  background: #ccc;
  width:100%;
}
.reservation-box{
  height:270rpx;
  background: #fff;
  width:100%;
  overflow: hidden;
}
.reservation-box .reservation-title{
  text-align: center;
  margin:15rpx 0;
}
.reservation-box .reservation-title span{
  text-align: center;
  color:#c4bbe6;
}
.reservation-btm{
  width:90%;
  margin-left:5%;
  padding:20rpx 0;
  border-top:1rpx solid #ccc;
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.reservation-btm image{
  height:156rpx;
  width:234rpx;
}
.reservation-btm>view view{
  font-size:26rpx;
}
.reservation-btm>view span{
  font-size:24rpx;
  color:#999;
}
.reservation-btm>view .receive{
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  border:1px solid #000;
  border-radius: 50rpx;
}
/* 艺欣艺术 */
.yixin{
  width:100%;
}
.yixin-title{
  text-align: center;
  margin:15rpx 0;
}
.yixin-title span{
  text-align: center;
  color:#c4bbe6;
}
.yixin-btm{
  width:90%;
  margin-left:5%;
  padding:20rpx 0;
  border-top:1rpx solid #ccc;
}
.yixin-btm>view{
  display: flex;
  justify-content: flex-start;
  margin:20rpx 0;
}
.yixin-btm>view view{
  margin-left:10rpx;
  font-size:26rpx;
}
.yixin-btm>view .yixin-orange{
  color:#ff7805;
  border:1rpx solid #ff7805;
  padding:5rpx 10rpx;
  font-size:24rpx;
  margin-left:15rpx;
}
/* 店铺图片 */
.shopImg{
  width:100%;
  padding-top:27rpx;
  background: #ccc;
}
.shopImg-box{
  background: #fff;
  overflow: hidden;
}
.shopImg-title{
  text-align: center;
  margin:15rpx 0;
  position: relative;
}
.shopImg-title span{
  text-align: center;
  color:#c4bbe6;
}
.shopImg-title .all{
  font-size:26rpx;
  color:#4e4e4e;
  position: absolute;
  top:8rpx;
  right:5%;
}
.shopImg-title .all i{
  font-size:26rpx;
}
.shopImg-btm{
  width:90%;
  margin-left:5%;
  padding:20rpx 0;
  border-top:1rpx solid #ccc;
  display: flex;
  justify-content:space-between;
}
.shopImg-btm image{
  width:215rpx;
  height:215rpx;
}